package command;

import java.util.*;


public abstract class Command {
	private String command;
	public Command(String command_){
		command = command_;
	}
	protected boolean checkCommand (String[] commands){
		return commands.length == 1 && commands[0].equalsIgnoreCase(command);
	}
	
	protected static LinkedList<Command> getAllCommands(){
		LinkedList<Command> commands = new LinkedList<Command>();
		commands.add(new HelpCommand());
		commands.add(new ExitCommand());
		commands.add(new RunCommand());
		return commands;
	}
	
	protected abstract void run();
}
