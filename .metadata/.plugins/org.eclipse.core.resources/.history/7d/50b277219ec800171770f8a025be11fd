package Problem;

import java.awt.geom.Point2D;
import java.util.AbstractSet;
import java.util.ArrayList;
import java.util.List;

//import KNN.Feature;

public class MetricEvaluator {
	public double sumOfDistances(Example trainingExample, Example testExample) {
    	Double distance = 0.0;
    	for (Feature f:trainingExample.getFeatures()){
    		distance+=f.getMetric();
    	}
    	/*
    	 * if intset contains a certain kind of feature add the distance metric associated with that feature to the distance variable
    	 */
    	List<Feature> trainingFeatures = new ArrayList<Feature>(trainingExample.getFeatures());
    	List<Feature> testFeatures = new ArrayList<Feature>(testExample.getFeatures());
    	for (int i = 0; i < trainingFeatures.size(); i++){
    		distance+=trainingFeatures.get(i).metric.calculateDistance(trainingFeatures.get(i), testFeatures.get(i));
    	}
		return distance;
    }

}
