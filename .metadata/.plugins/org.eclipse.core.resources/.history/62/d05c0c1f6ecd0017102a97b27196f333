package command;

import java.util.LinkedList;

/**
 * This class parses all commands and runs the associated code if a match is found
 * 
 * @author CraigBook
 *
 */
public class Parser {
	private LinkedList<Command> commands = new LinkedList<>();

    /**
     * parses a command from the command line
     *
     * @param s the string to be parsed
     */
    public void parse(String s)            //Parses string and runs associated command
    {
        commands = Command.getAllCommands();

        String[] words = s.split(" ");
        if (words.length == 0) {
        } else if (words.length >= 1) {
            for (Command command : commands) {        //Checks all commands
                if (command.checkCommand(words)) {
                    command.run();
                    break;
                }
            }
        }
    }
}
