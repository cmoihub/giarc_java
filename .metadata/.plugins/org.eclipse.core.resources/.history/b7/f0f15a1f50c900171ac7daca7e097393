	/**
	 * This is an action listener for the add button
	 * 
	 * @author CraigBook
	 *
	 */
	private class _addActionListener implements ActionListener{
		@Override
		public void actionPerformed(ActionEvent e) {
			System.out.println("Adding selected feature");
			add();
		}
	}
