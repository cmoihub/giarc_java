package featureTests;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import feature.NumberFeature;

public class NumberFeatureTest {

	NumberFeature n1;
	NumberFeature n2;
	double no = 1.0;
	@Before
	public void setUp() throws Exception {
		n1 = new NumberFeature();
		n2 = new NumberFeature(no);
	}

	@Test
	public void testComplex() {
		assertFalse(n1.isComplex());
	}
	
	@Test
	public void testEmptyConstructor(){
		assertEquals(n1.getValue(), 0.0);
	}
	
	@Test
	public void testConstructor(){
		assertEquals(n2.getValue(), no);
	}
	
	@Test
	public void testValueSetter(){
		n1.setValue(no);
		assertEquals(n1.getValue(), no);
	}
}
