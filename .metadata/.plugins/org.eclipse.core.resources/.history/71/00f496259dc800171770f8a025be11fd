package Problem;

import java.awt.geom.Point2D;
import java.util.AbstractSet;
import java.util.ArrayList;
import java.util.List;

//import KNN.Feature;

public class MetricEvaluator {
	public double sumOfDistances(AbstractSet<Feature> features, Example trainingExample, Example testExample) {
    	Double distance = 0.0;
    	/*
    	 * if intset contains a certain kind of feature add the distance metric associated with that feature to the distance variable
    	 */
    	List<Feature> featureList = new ArrayList<Feature>(features);
    	List<Feature> featureTraining = new ArrayList<Feature>(trainingExample.features);
    	List<Feature> featureTest = new ArrayList<Feature>(testExample.features);
    	for (int i = 0; i < featureTraining.size(); i++){
    		distance+=featureTraining.get(i).metric.calculateDistance(featureTraining.get(i), featureTraining.get(i));
    	}        
		return distance;
    }

}
