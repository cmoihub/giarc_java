public class MetricEvaluator {
	public double sumOfDistances(AbstractSet<Feature> features, Example trainingExample, Example testExample) {
    	Double distance = 0.0;
    	/*
    	 * if intset contains a certain kind of feature add the distance metric associated with that feature to the distance variable
    	 */
    	List<Feature> featureList = new ArrayList<Feature>(features);
    	
    	for (Feature f : features){
    		distance+=f.metric.calculateDistance(trainingExample, testExample);
    	}

//        if(intset.contains(Feature.Age.ordinal()))
//        	distance+=ageDistance;
//        if(intset.contains(Feature.SquareFeet.ordinal()))
//        	distance+=sqFtDistance;
//        if(intset.contains(Feature.Coordinates.ordinal()))
//        	distance+=euclideanDistance;
//        if(intset.contains(Feature.Latitude.ordinal()))
//            distance+=latDistance;
//        if(intset.contains(Feature.Longitude.ordinal()))
//            distance+=lonDistance;
        
		return distance;
    }

}
