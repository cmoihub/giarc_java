package gui_mvc;

import java.awt.GridLayout;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;

import javax.swing.*;

import main.CitationFormat;
import main.Model;

public class View extends JFrame{
	/**
	 * 
	 */
	private static final long serialVersionUID = -7533151960250587021L;
//	private JButton button1;
//	private JButton button2;
//	private JButton button3;
	
	private JPanel panel;
	private JPanel container;
	
//	private JMenuBar menu;
	
	private JRadioButton ieee;
	private JRadioButton acm;
	
	private JTextField nameField;
	private JTextField surname;
	private JTextArea text;
	private Model model;
//	private static final String _ieee = "IEEE";
//	private static final String _acm = "ACM";
	
	private ButtonGroup radioButtons;
	public View(Model model_) {
		super("SYSC 3110 Lab Exam");
		model = model_;
		initializeSwing();
		
		container.setLayout(new BoxLayout(container, BoxLayout.LINE_AXIS));
		container.add(panel);
		
		
//		menu.add(button1);
//		menu.add(button2);
//		menu.add(button3);
		
		ieee.setMnemonic(KeyEvent.VK_0);
		ieee.setActionCommand(CitationFormat.ieee.toString());
		
		acm.setMnemonic(KeyEvent.VK_1);
		acm.setActionCommand(CitationFormat.acm.toString());
		
		JPanel radioPanel = new JPanel();
		radioPanel.add(ieee);
		radioPanel.add(acm);
		panel.add(radioPanel);
		
//		this.setJMenuBar(menu);
		this.add(container);
		
//		setup(this);
	}
	
	/**
	 * initialize gui parts from the swing library
	 */
	private void initializeSwing(){
//		button1 = new JButton("button1");
//		button2 = new JButton("button2");
//		button3 = new JButton("button3");
		
		panel = new JPanel(new GridLayout(4,2));
		container = new JPanel();
		
		nameField = new JTextField(20);
		surname = new JTextField(20);
		text = new JTextArea(5,20);
		
		ieee = new JRadioButton(CitationFormat.ieee.toString(), true);
		acm = new JRadioButton(CitationFormat.acm.toString());
		
		radioButtons = new ButtonGroup();
		radioButtons.add(ieee);
		radioButtons.add(acm);
		
//		menu = new JMenuBar();
	}
	
	/**
	 * this function applies desired settings to a jframe
	 *
	 * @param frame
	 */
	protected void setup(JFrame frame){
		frame.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		frame.setSize(500,500);
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
	}
	
	protected JTextField getSurnameField(){
		return surname;
	}
	
	protected JTextField getNameField(){
		return nameField;
	}
	
	protected JTextArea getTextArea(){
		return text;
	}
	
	protected void addIEEEActionListener(ActionListener listener){ieee.addActionListener(listener);}
	protected void addACMActionListener(ActionListener listener){acm.addActionListener(listener);}
	protected void addNameActionListener(ActionListener listener){nameField.addActionListener(listener);}
	protected void addSurnameActionListener(ActionListener listener){surname.addActionListener(listener);}
}
